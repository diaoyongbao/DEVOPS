let mapleader=" "
set number
set cursorline
set wrap
set showcmd
set wildmenu
set hlsearch
exec "nohlsearch"
set incsearch
noremap <LEADER><CR> :nohlsearch<CR>

call plug#begin('~/.vim/plugged')
Plug 'vim-airline/vim-airline'
Plug 'connorholyday/vim-snazzy'
call plug#end()

color snazzy
let g:SnazzyTransparent = 1
map s <nop>
map sp :set splitright<CR>:vsplit<CR>
